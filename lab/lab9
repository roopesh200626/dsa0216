import cv2
img = cv2.imread("image.jpg")
rows, cols = img.shape[:2]
M1 = cv2.getRotationMatrix2D((cols/2, rows/2), -45, 1)
M2 = cv2.getRotationMatrix2D((cols/2, rows/2), 45, 1)
cw = cv2.warpAffine(img, M1, (cols, rows))
ccw = cv2.warpAffine(img, M2, (cols, rows))
cv2.imshow("Clockwise", cw)
cv2.imshow("CounterClockwise", ccw)
cv2.waitKey(0)
cv2.destroyAllWindows()
