import cv2
cap = cv2.VideoCapture("video.mp4")
while cap.isOpened():
    ret, frame = cap.read()
    if not ret:
        break
    cv2.imshow("Video", frame)
    key = cv2.waitKey(30)
    if key == ord('s'):
        cv2.waitKey(120)
    if key == ord('f'):
        cv2.waitKey(5)
    if key == 27:
        break
cap.release()
cv2.destroyAllWindows()
